<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d7c797"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Make" >

   <Button
       android:id="@+id/MakeMyMood"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:text="Make My Mood" />
   <LinearLayout
       android:id="@+id/Wordslayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:orientation="vertical" >  
   
<TextView
           android:id="@+id/moodinmaking"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:text="Your Mood In The Making:" 
           android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/moodmake_horizontal_margin"
              />
        <TextView
           android:id="@+id/moodmaking"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:ems="10"
           android:text="....." 
            
             />
 

       <TextView
           android:id="@+id/textdecl"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:text="please etch in upto 5 Words" />

       <LinearLayout
           android:id="@+id/word1layout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/word1decl"
               android:layout_width="65dp"
               android:layout_height="wrap_content"
               android:ems="10"
               android:text="1st Word" />

           <EditText
               android:id="@+id/word1Text"
               android:layout_width="128dp"
               android:layout_height="wrap_content"
               android:singleLine="true" 
               android:ems="10" />
       </LinearLayout>

       <LinearLayout
           android:id="@+id/word2layout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/word2decl"
               android:layout_width="65dp"
               android:layout_height="wrap_content"
               android:ems="10"
               android:text="2nd Word" />

           <EditText
               android:id="@+id/word2Text"
               android:layout_width="128dp"
               android:singleLine="true" 
               android:layout_height="wrap_content"
               android:ems="10" />
       </LinearLayout>

       <LinearLayout
           android:id="@+id/word3layout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/word3decl"
               android:layout_width="65dp"
               android:layout_height="wrap_content"
               android:ems="10"
               android:text="3rd Word" />

           <EditText
               android:id="@+id/word3Text"
               android:layout_width="128dp"
               android:layout_height="wrap_content"
               android:singleLine="true" 
               android:ems="10" />
       </LinearLayout>

       <LinearLayout
           android:id="@+id/word4layout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/word4decl"
               android:layout_width="65dp"
               android:layout_height="wrap_content"
               android:ems="10"
               android:text="4th Word" />

           <EditText
               android:id="@+id/word4Text"
               android:layout_width="128dp"
               android:layout_height="wrap_content"
               android:singleLine="true" 
               android:ems="10" />
       </LinearLayout>

      

       <LinearLayout
           android:id="@+id/word5layout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/word5decl"
               android:layout_width="65dp"
               android:layout_height="wrap_content"
               android:ems="10"
               android:text="5th Word" />

           <EditText
               android:id="@+id/word5Text"
               android:layout_width="128dp"
               android:layout_height="wrap_content"
               android:singleLine="true" 
               android:ems="10" />
       </LinearLayout>
        
   </LinearLayout>

</RelativeLayout>